{
    "name": "rehnansilva/xlr8rms",
    "description": "XLR8 Backend Interview",
    "license" : "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Rehnan Silva",
            "email": "rehnancarolinoo@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "XLR8RMS\\App\\": "src",
            "XLR8RMS\\App\\Entity\\": "src/entity",
            "XLR8RMS\\App\\Enums\\": "src/enums",
            "XLR8RMS\\App\\Interfaces\\": "src/interfaces",
            "XLR8RMS\\App\\Repository\\": "src/repository",
            "XLR8RMS\\App\\Service\\": "src/service",
            "XLR8RMS\\App\\Strategy\\": "src/strategy"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ]
    },
    "require": {
        "php": ">=7.4",
        "illuminate/collections": "^8.83",
        "guzzlehttp/guzzle": "~7.0"

    },
    "require-dev": {
        "phpunit/phpunit": "9.5",
        "larapack/dd": "^1.1",
        "mockery/mockery": "^1.5"
    },
    "scripts": {
        "unit:test": "phpunit"
    },
    "config":{
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
